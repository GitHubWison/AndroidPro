<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test ="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text111"
        android:id="@+id/textView"
        android:layout_gravity="center_vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/clickbutton"
        android:layout_gravity="center_vertical" />
    <com.test.medicalsystem.commonclass.StatusButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/status_button"
        android:text="点我"
        test:notClickBgColor="@color/lightRedColor"
        test:notClickFontColor="@color/blackColor"
        test:clickedBgColor="@color/grayColor"
        test:clickedFontColor="@color/lightBlueColor"
        />
    <com.test.medicalsystem.commonclass.StatusButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/status_button2"
        android:text="点我2"
        test:notClickBgColor="@color/lightRedColor"
        test:notClickFontColor="@color/blackColor"
        test:clickedBgColor="@color/grayColor"
        test:clickedFontColor="@color/lightBlueColor"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恢复按钮的状态"
        android:id="@+id/recover_button"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/smile"
        android:singleLine="true"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
